<?xml version="1.0" encoding="utf-8"?>
<cn.dahuoji.body_temperature.skinview.SkinRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center_vertical">

    <cn.dahuoji.body_temperature.skinview.TTFTextView
        android:id="@+id/symbolText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/symbol_sexy"
        android:textColor="@color/pool_text_color_light"
        android:textSize="8sp" />

    <cn.dahuoji.body_temperature.skinview.TTFTextView
        android:id="@+id/numberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/symbolText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="1"
        android:textColor="@color/pool_text_color_hard"
        android:textSize="16sp"
        android:textStyle="bold" />

    <cn.dahuoji.body_temperature.skinview.TTFTextView
        android:id="@+id/lunarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="1"
        android:textColor="@color/pool_text_color_light"
        android:textSize="11sp"
        android:textStyle="bold" />

</cn.dahuoji.body_temperature.skinview.SkinRelativeLayout>